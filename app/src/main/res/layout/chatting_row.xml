<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/left_message_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="3dp"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/left_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/left_arrow"
            android:background="@drawable/rounded_gray_row"
            android:orientation="vertical"
            android:paddingBottom="2dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/text_view_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:paddingBottom="1dp"
                android:paddingLeft="12dp"
                android:paddingRight="9dp"
                android:paddingTop="2dp"
                android:text="e33ed3333d3r"
                android:textColor="@android:color/white"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_marginTop="1dp"
                android:gravity="top"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/message_time_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginRight="4dp"
                    android:text="11.47 pm"
                    android:textColor="@color/transparent_white"
                    android:textSize="11sp"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/left_arrow"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="8dp"
            android:src="@drawable/left_corner_tip"
            android:visibility="visible" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/right_message_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="3dp"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/right_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4dp"
            android:layout_toLeftOf="@+id/right_arrow"
            android:background="@drawable/rounded_blue_row"
            android:orientation="vertical"
            android:paddingBottom="4dp"
            android:paddingTop="2dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/text_view_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:paddingBottom="1dp"
                android:paddingLeft="9dp"
                android:paddingRight="12dp"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_marginTop="1dp"
                android:gravity="top"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <TextView
                    android:id="@+id/message_time_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginRight="4dp"
                    android:text=""
                    android:textColor="@color/transparent_white"
                    android:textSize="11sp"
                    android:visibility="visible" />

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/right_arrow"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:src="@drawable/right_corner_tip"
            android:visibility="visible" />
    </RelativeLayout>


</RelativeLayout>